<Window x:Class="joc_dame.Views.PlayerSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:joc_dame.Views"
        mc:Ignorable="d"
        Title="PlayerSelection" Height="220" Width="300">
    <Grid>
        <Label Content="Insert your names:" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="118"/>
        <Label Content="Red Player" HorizontalAlignment="Left" Margin="27,52,0,0" VerticalAlignment="Top" Width="77"/>
        <Label Content="Black Player" HorizontalAlignment="Left" Margin="27,99,0,0" VerticalAlignment="Top" Width="77"/>
        <TextBox Text="{Binding RedPlayer}" HorizontalAlignment="Left" Margin="125,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="117"/>
        <TextBox Text="{Binding BlackPlayer}" HorizontalAlignment="Left" Margin="125,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="117"/>
        <Button Content="Ok" HorizontalAlignment="Left" Margin="190,142,0,0" VerticalAlignment="Top" Command="{Binding Done}" Width="52"/>

    </Grid>
</Window>
